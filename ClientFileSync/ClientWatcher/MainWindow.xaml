<Window x:Class="ClientWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWatcher"
        mc:Ignorable="d"
        Title="File Syncronizer" Height="350" Width="525" 
        Loaded="ActionWindowLoaded"
        >
    <Grid>
        <Label x:Name="infoLabel" Margin="10,10,0,0" HorizontalAlignment="Left" Width="284" Height="28" VerticalAlignment="Top" />
        <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
            <Button x:Name="SelectFolder" Height="32" Width="80" Click="SelectFolder_Click">Select Folder</Button>
            <Label x:Name="CurrentFolder" Margin="10,10,0,0" HorizontalAlignment="Left" Width="284" Height="28" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
